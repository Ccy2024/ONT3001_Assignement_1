@model ONT3001_Assignement_1.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h1 class="text-black">Edit Employee</h1>


    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="EmployeeID" /> <!-- Hidden field for EmployeeID -->
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartmentID" class="control-label"></label>
            <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                <option value="">--Select Category--</option>
            </select>
            <input type="hidden" asp-for="DepartmentID" />
            <span asp-validation-for="DepartmentID" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input type="hidden" asp-for="IsActive" value="true" />
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Active</label>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary mt-3">Update Employee</button>
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .control-label,
    .form-check-label {
        font-weight: 500;
    }

    .form-group.form-check {
        margin-top: 10px;
    }


    .control-label::after {
        content: "*";
        color: red;
        margin-left: 2px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        margin-right: 8px;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .button-group-spacing {
        margin-top: 20px;
    }

</style>

