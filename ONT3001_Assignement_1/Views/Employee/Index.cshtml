@model IEnumerable<ONT3001_Assignement_1.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1 class="text-black">List of Employees</h1>

<div class="d-flex justify-content-end mb-3">
    <form asp-action="Search" method="get" class="d-flex align-items-center">

        <div class="input-group me-2" style="max-width: 400px;">
            
            <span class="input-group-text"><i class="bi bi-building" style="color: #28a745;"></i></span>
            <input type="text" name="departmentName" class="form-control" placeholder="Search by department..." />
        </div>

        <div class="input-group me-2" style="max-width: 150px;">
           
            <span class="input-group-text"><i class="bi bi-calendar-date" style="color: #28a745;"></i></span>
            <input type="number" name="minAge" class="form-control" placeholder="Min age..." min="18" max="65" /> 
        </div>

        <button class="btn btn-primary" type="submit">
            Search
        </button>
    </form>
</div>


<table class="table table-bordered table-striped table-hover">
    <thead style="background-color: #28a745; color: white;">
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model) // Iterate over each employee
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Age</td>
                <td>@employee.Department.Name</td> 
                <td>@(employee.IsActive ? "Active" : "Inactive")</td> @* Display "Active" and "Inactive" *@
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a>

                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> 
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" class="btn btn-success">Add New Employee</a>
</div>

