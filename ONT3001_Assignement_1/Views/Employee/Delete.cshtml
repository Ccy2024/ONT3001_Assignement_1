@model ONT3001_Assignement_1.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1 class="text-black">Delete Employee</h1>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <div>
        <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Department:</strong> @Model.Department?.Name</p>
        <p><strong>Active:</strong> @Model.IsActive</p>
    </div>

    <div class="mt-2">
        <!-- This form will call the POST action to soft delete -->
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="EmployeeID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>

<style>
    .control-label,
    .form-check-label {
        font-weight: 500;
    }

    .form-group.form-check {
        margin-top: 10px;
    }

    .control-label::after {
        content: "*";
        color: red;
        margin-left: 2px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .button-group-spacing {
        margin-top: 20px;
    }
</style>